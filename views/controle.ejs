        <% if(message != "") {  %>
            <section id="message">
                <%= message %> <span id="close">&times;</span>
            </section>
        <% }  %>

    <form class="acesso" action="/controle" method="POST">
        <div class="cardAc">
            <div class="card-top">
                <img class="imgCadeado" src="./img/cadeado.png" alt="Acesso restrito">
                <h2>Painel de Controle</h2>
                <p>Acesso para Membros</p>
            </div>
            <div class="card-group">
                <label>Login</label>
                <input type="text" name="login" placeholder="Digite seu login" required>
            </div>
            <div class="card-group">
                <label>Senha</label>
                <input type="password" name="senha" placeholder="Digite sua senha" required>
            </div>
            <div class="checkbox">
                <label><input type="checkbox"> Lembre-me</label>
            </div>
            <div class="card-group">
                <button class="btnAcessar" type="submit">Acessar</button>
            </div>
        </div>
